# apps/web/.env.local.example

# Environment variables for the Routly Web application (Next.js)

# API base URL (must stay empty, Next.js automatically resolves /api)
NEXT_PUBLIC_API_BASE_URL=

# Supabase public credentials
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=

# Supabase service role key (server-side only, DO NOT expose publicly)
SUPABASE_SERVICE_ROLE_KEY=

# MapTiler API key (required for MapLibre map tiles)
NEXT_PUBLIC_MAPTILER_KEY=

# Routing + weather API keys (server-side usage)
ORS_API_KEY=
GOOGLE_WEATHER_API_KEY=
